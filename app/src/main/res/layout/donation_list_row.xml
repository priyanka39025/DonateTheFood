<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:layout_margin="6dp"
    app:cardCornerRadius="3dp">
    <LinearLayout
        android:id="@+id/root_lay"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/food_image"/>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/foodNameTV"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rice with meat"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#202020"/>
                    <TextView
                        android:id="@+id/foodQunatityTV"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="2 packets"
                        android:textSize="15sp"
                        android:textColor="#3F51B5"/>
                    <TextView
                        android:id="@+id/collectionDateTv"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="04/10/2019"
                        android:layout_marginTop="3dp"
                        android:textSize="15sp"
                        android:textColor="#3F51B5"/>
                    <TextView
                        android:id="@+id/collectionTimeTv"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="2:00:00"
                        android:textSize="15sp"
                        android:textColor="#3F51B5"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/loc"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_baseline_location_on_24"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:layout_toRightOf="@id/loc"
                android:layout_centerVertical="true"
                android:id="@+id/addressTV"
                android:layout_marginStart="8dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="17sp"
                android:textColor="#454545"
                android:text="adress"/>

            <TextView
                android:id="@+id/picked_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Not Picked Up"
                android:layout_margin="8dp"
                android:textAlignment="center"
                android:textColor="#000"
                android:background="#FBC02D"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="37dp"
                android:layout_marginRight="37dp"
                android:src="@drawable/right_arrow" />
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>